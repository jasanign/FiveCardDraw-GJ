<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_screen6a__win"
    style="@style/activity_defaults"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context="edu.wcu.cs.fivecarddraw_gj.Screen6a_Win"
    tools:ignore="ContentDescription">

    <TextView
        style="@style/txt_view"
        android:id="@+id/scr6a_title"
        android:layout_weight="2"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/title_text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:showDividers="middle"
        android:divider="@drawable/empty_horizontal_divider"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/win_card1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/win_card2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/win_card3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/win_card4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/win_card5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/scr6a_description"
        style="@style/txt_view"
        android:gravity="center"
        android:layout_weight="1"/>

</LinearLayout>
